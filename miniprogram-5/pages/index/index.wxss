.container {
  position: relative;
  height: 100vh;
  padding: 20rpx;
  background-image: url('https://images.unsplash.com/photo-1685468413971-eb5a98d01f34?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1887&q=80');
  background-size: cover;
}

.comments .comment {
  position: absolute;
  background-color: rgba(255, 255, 255, 0.5); /* 带有透明度的白色背景 */
  padding: 10rpx;
  border-radius: 5rpx;
  color: #333; /* 字体颜色为深灰色 */
  box-shadow: 0 2px 6px rgba(0,0,0,0.1); /* 添加轻微的阴影 */
  transition: all 0.2s ease-in-out;
}


.input {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 10rpx;
  background-color: #fafafa;
  border-top: 1px solid #eee;
}
